
public class HeapChecker {
	
	public boolean addEltTester(IHeap hOrig, int elt, IBinTree hAdded) {
		return isHeap(hAdded);
	}
	
	public boolean remMinEltTester(IHeap hOrig, IBinTree hRemoved) {
		return isHeap(hRemoved);
	}
	
	public boolean isHeap(IBinTree heap) {
		if(heap.size()>1) {
			return heap.compareNode(heap.getLeft()) & heap.compareNode(heap.getRight()) 
					& isHeap(heap.getLeft()) & isHeap(heap.getRight());
		}
		return true;
	}
	
}
